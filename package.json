{
  "name": "Robot-APVSYS",
  "version": "1.0.0",
  "description": "Mono-repo with .NET API and Next.js Web App",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "install": "node scripts/dependency-manager.js",
    "dev": "node scripts/dev-utility.js",
    "build": "node scripts/build-utility.js",
    "start": "node scripts/start-utility.js",
    "clean": "node scripts/clean-utility.js",
    "restore": "node scripts/install-utility.js",
    "test": "node scripts/test-utility.js",
    "lint": "cd apps/web && pnpm lint",
    "format": "pnpm format:api && pnpm format:web",
    "format:api": "cd apps/api && dotnet format",
    "format:web": "cd apps/web && pnpm lint --fix",
    "watch:api": "cd apps/api && dotnet watch run",
    "publish:api": "cd apps/api && dotnet publish -c Release -o ./publish",
    "publish:web": "cd apps/web && pnpm build && pnpm export",
    "workspace": "node scripts/workspace-utility.js",
    "add:package": "node scripts/package-manager.js add:node",
    "add:nuget": "node scripts/package-manager.js add:nuget",
    "remove:package": "node scripts/package-manager.js remove:node",
    "remove:nuget": "node scripts/package-manager.js remove:nuget",
    "packages:list": "node scripts/package-manager.js list"
  },
  "keywords": [
    "monorepo",
    "dotnet",
    "nextjs",
    "api",
    "web"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
